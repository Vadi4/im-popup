.l-footer
	width 100%
	margin-top auto
	margin-bottom 0
	
.l-common-wrap
	display flex
	align-items center
	justify-content center
	height 100vh
	flex-direction column
	
.btn 
	display inline-flex
	height 40px
	align-items center
	padding 0 40px
	background-color #f5333f
	color #fff
	cursor pointer
	transition .25s background-color

.btn
	&:hover 
		background-color #fc0511

.b-popup
	width 600px
	min-height 200px